<div class="container d-flex justify-content-center align-items-center" style="height: 90vh;">
  <div class="col-12 col-md-6 col-lg-4 border p-5 rounded">
    <h2 class="text-center mb-4 emilys-candy-regular">Instagram</h2>
    <p>Sign up to see photos and videos from your friends.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Username Field -->
      <div class="mb-3">
        <%= f.label :username, class: 'form-label' %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control', required: true, placeholder: "Enter your username" %>
      </div>

      <!-- Email Field -->
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: "Enter your email" %>
      </div>

      <!-- Password Field -->
      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <% if @minimum_password_length %>
          <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true, placeholder: "Choose a password" %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true, placeholder: "Confirm your password" %>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <%= f.submit "Sign Up", class: 'btn btn-primary btn-block w-100' %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <!%= render "devise/shared/links" %>
    </div>
  </div>
</div>
