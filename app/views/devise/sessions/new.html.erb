<div class="container d-flex justify-content-center align-items-center " style="height: 90vh;">
  <div class="col-12 col-md-6 col-lg-4 border p-5 rounded">
    <h2 class="text-center mb-4 ">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: "Enter your email" %>
      </div>

      <!-- Password Field -->
      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true, placeholder: "Enter your password" %>
      </div>

      <!-- Remember Me Field -->
      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="text-center">
        <%= f.submit "Log In", class: 'btn btn-primary btn-block w-100' %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
